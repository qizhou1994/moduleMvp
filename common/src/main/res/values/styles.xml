<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FragmentContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/window_background_dark</item>
    </style>

    <color name="window_background_dark">#ffffff</color>

    <!--dash line-->
    <declare-styleable name="DashLineView">
        <attr name="dashlineColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ShadowImageView">
        <attr name="shadow_color" format="color"/>
        <attr name="shadow_width" format="integer"/>
        <attr name="shadow_alpha" format="float"/>
        <attr name="image_fram_width" format="integer"/>
        <attr name="image_fram_color" format="color"/>
    </declare-styleable>
</resources>
